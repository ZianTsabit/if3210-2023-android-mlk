<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CameraFragment">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:elevation="1dp"
        android:src="@drawable/twibbon" />

    <ImageView
        android:id="@+id/twibbon_picture"
        android:layout_width="400dp"
        android:layout_height="380dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"/>

    <ImageView
        android:id="@+id/take_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/twibbon_picture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/capture_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/take_picture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Capture"
        android:textSize="20dp"
        android:textFontWeight="500"
        android:textColor="@color/maroon_red"/>

</RelativeLayout>